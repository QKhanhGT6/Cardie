<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark"
    tools:context=".ResultActivity">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:background="@drawable/card_round_corner_bluelight_result">
    </ImageView>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="450dp"
        android:layout_height="300dp"
        android:background="@drawable/card_round_corner_purple_result">
    </ImageView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="-50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="450dp"
        android:layout_height="150dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/backgroundLight">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/pow"
            android:layout_marginLeft="220dp">
        </ImageView>
        <ImageView
            android:layout_marginLeft="10dp"
            android:rotationY="180"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/pow">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/result_title"
        android:elevation="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:fontFamily="@font/nunitosemibold"
        android:textColor="@color/textWhite"
        android:textSize="43dp">
    </TextView>
    <TextView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_title"
        android:text="Your practice result are: "
        android:textSize="27dp"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/nunitosemibold"
        android:textColor="@color/textWhite">
    </TextView>

    <LinearLayout
        android:layout_below="@id/result_title"
        android:layout_marginTop="70dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:rotation="90"
            android:layout_marginLeft="100dp"
            android:layout_width="60dp"
            android:layout_height="150dp"
            android:background="@drawable/line_white">
        </ImageView>
        <ImageView
            android:rotation="90"
            android:layout_marginLeft="100dp"
            android:layout_width="60dp"
            android:layout_height="150dp"
            android:background="@drawable/line_white">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/result_title"
        android:layout_marginTop="120dp">
        <TextView
            android:textAlignment="center"
            android:id="@+id/tv_practice_mode_1_correct_count"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="3/9"
            android:textSize="27dp"
            android:textColor="@color/textWhite"
            android:fontFamily="@font/nunitosemibold">
        </TextView>
        <TextView
            android:layout_marginLeft="0dp"
            android:textAlignment="center"
            android:id="@+id/tv_practice_mode_1_time_count"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/time_count"
            android:textColor="@color/textWhite"
            android:textSize="27dp"
            android:fontFamily="@font/nunitosemibold">
        </TextView>
        <TextView
            android:id="@+id/tv_practice_mode_1_score_count"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/point_count"
            android:textColor="@color/textWhite"
            android:textSize="27dp"
            android:fontFamily="@font/nunitosemibold">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/result_up"
        android:layout_marginTop="-20dp">
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/correct"
            android:textSize="27dp"
            android:textColor="@color/textWhite"
            android:fontFamily="@font/nunitolight">
        </TextView>
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/textWhite"
            android:textSize="27dp"
            android:fontFamily="@font/nunitolight">
        </TextView>
        <TextView
            android:layout_marginLeft="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/point"
            android:textColor="@color/textWhite"
            android:textSize="27dp"
            android:fontFamily="@font/nunitolight">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="75dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_down"
        android:orientation="vertical"
        android:id="@+id/learning_reminder">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning Reminder"
            android:textSize="27dp"
            android:textColor="@color/textWhite"
            android:fontFamily="@font/nunitosemibold">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notify me to practice within: "
                android:textSize="24dp"
                android:textColor="@color/textWhite"
                android:fontFamily="@font/nunitolight">
            </TextView>
            <Spinner
                android:entries="@array/week_select"
                android:id="@+id/sp_week_spinner"
                android:layout_width="70dp"
                android:layout_height="30dp">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I don't want to be notify"
                android:textColor="@color/textWhite"
                android:fontFamily="@font/nunitolight"
                android:textSize="17dp"
                android:layout_marginLeft="50dp">
            </TextView>
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/box_uncheck"
                android:layout_marginLeft="15dp">
            </Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/learning_reminder"
        android:id="@+id/result_streak"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have done"
            android:textSize="35dp"
            android:fontFamily="@font/nunitosemibold"
            android:textColor="@color/textWhite">
        </TextView>

        <TextView
            android:id="@+id/tv_practice_mode_1_row"
            android:layout_marginTop="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="69dp"
            android:fontFamily="@font/nunitosemibold"
            android:textColor="@color/backgroundOrange">
        </TextView>

        <TextView
            android:layout_marginTop="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="in a row"
            android:textSize="27dp"
            android:fontFamily="@font/nunitolight"
            android:textColor="@color/textWhite">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/result_streak">

        <Button
            android:id="@+id/btn_practice_mode_1_continue"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/card_round_corner_orange_result"
            android:fontFamily="@font/nunitosemibold"
            android:text="continue"
            android:textColor="@color/textWhite"
            android:textSize="17dp"></Button>

        <Button
            android:id="@+id/btn_practice_mode_1_finish"
            android:text="finish"
            android:textColor="@color/textWhite"
            android:textSize="17dp"
            android:fontFamily="@font/nunitosemibold"
            android:layout_marginLeft="20dp"
            android:background="@drawable/result_corner_gray"
            android:layout_width="170dp"
            android:layout_height="50dp">
        </Button>
    </LinearLayout>
</RelativeLayout>